def TheRestOfTheDays():
  print("would you like to see Tuesday's schedule?")
  if input() == 'yes':
    print('ok')
    sleep(2)
    os.system('clear')
    print('but first, I need to see if you added it to your schedule...')
    sleep(2.5)
    os.system('clear')
    print('searching...')
    if "Tuesday" in zeList:
      print('yes. It is in you schudule')
      sleep(1.5)
      os.system('clear')
    Tuesday()
  else:
    print('ok')

